{% extends 'base.html.twig' %}

{% block body %}
<div class="content-page">
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Liste des reservation</h5>

                            <!-- Formulaire de recherche -->
                            <form action="{{ path('afficher_tables') }}" method="GET">
                                <div class="form-group">
                                    <label for="search">Rechercher par  Description :</label>
                                    <input type="text" class="form-control" id="search" name="search" value="{{ app.request.query.get('search') }}">
                                </div>
                                <button type="submit" class="btn btn-primary">Rechercher</button>
                            </form>
                            <!-- Fin du formulaire de recherche -->

                            <!-- Tableau des tabless filtrées -->
                           {% for recl in Tables %}
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Nombre de places: {{ recl.nombre_p }}</h5>
            <h6 class="card-subtitle mb-2 text-muted">Statut: {{ recl.status }}</h6>
             <h7 class="card-subtitle mb-2 text-muted">reservation: {{ recl.gerant.name }}</h7>
            <div class="btn-group" role="group" aria-label="Actions">
                
                <a class="btn cur-p btn-danger" href="{{ path('delete_ab', {'id': recl.id}) }}">Supprimer</a>
                <a class="btn cur-p btn-success" href="{{ path('update_ab', {'id': recl.id}) }}">Mettre à jour</a>
            </div>
        </div>
    </div>
{% endfor %}

                            <!-- Fin du tableau des tabless filtrées -->

                            <!-- Pagination -->
                            <div class="pagination">
                                {% set currentPage = Tables.currentPageNumber %}
                                {% set previous = currentPage > 1 ? currentPage - 1 : false %}
                                {% set next = currentPage < Tables.pageCount ? currentPage + 1 : false %}
                                <ul class="pagination">
                                    {% if previous %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_tables') }}?page={{ previous }}">Précédent</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ currentPage }}</span>
                                    </li>
                                    {% if next %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_tables') }}?page={{ next }}">Suivant</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                            <!-- Fin de la pagination -->
                            <!-- Ajoutez ce lien à la suite de votre contenu -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
